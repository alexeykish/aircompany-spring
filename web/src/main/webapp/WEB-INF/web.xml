<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>aircompany</display-name>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.pvt.kish.aircompany.controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showindex-page</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>registration-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/registration.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addflight-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/addflight.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateflight-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/editflight.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addemployee-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/addemployee.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateemployee-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/editemployee.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addairport-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/addairport.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateairport-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/editairport.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addplane-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/addplane.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateplane-page</servlet-name>
        <jsp-file>/WEB-INF/view/pages/editplane.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showindex-page</servlet-name>
        <url-pattern>/showindex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration-page</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addflight-page</servlet-name>
        <url-pattern>/addflight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateflight-page</servlet-name>
        <url-pattern>/updateflight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addemployee-page</servlet-name>
        <url-pattern>/addemployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateemployee-page</servlet-name>
        <url-pattern>/updateemployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addairport-page</servlet-name>
        <url-pattern>/addairport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateairport-page</servlet-name>
        <url-pattern>/updateairport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addplane-page</servlet-name>
        <url-pattern>/addplane</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateplane-page</servlet-name>
        <url-pattern>/updateplane</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ConfigFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.ConfigFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.SessionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.AdminAuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DispatcherAuthFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.DispatcherAuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PreAddFlightFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.PreAddFlightFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PreUpdateFlightFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.PreUpdateFlightFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PreAddEmployeeFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.PreAddEmployeeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PreUpdateEmployeeFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.PreUpdateEmployeeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PreRegistrationFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.PreRegistrationFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>ConfigFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/addflight</url-pattern>
        <url-pattern>/updateflight</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DispatcherAuthFilter</filter-name>
        <url-pattern>/addemployee</url-pattern>
        <url-pattern>/updateemployee</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PreAddFlightFilter</filter-name>
        <url-pattern>/addflight</url-pattern>
        <url-pattern>/updateflight</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PreUpdateFlightFilter</filter-name>
        <url-pattern>/updateflight</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PreAddEmployeeFilter</filter-name>
        <url-pattern>/addemployee</url-pattern>
        <url-pattern>/updateemployee</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PreUpdateEmployeeFilter</filter-name>
        <url-pattern>/updateemployee</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PreRegistrationFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/aircompany</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>